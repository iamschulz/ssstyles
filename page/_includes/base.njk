		<script>
			document.querySelector("#dialogTrigger").onclick = function () {
				document.getElementById("dialog").showModal();
			};

			const setMeter = () => {
				const meter = document.querySelector("meter");
				meter.value = meter.value >= 1 ? meter.value - 1 : 100;
				window.requestAnimationFrame(() => {
					setMeter();	
				})
			}
			setMeter();

			const setProgress = () => {
				const progress = document.querySelector("progress");
				progress.value = progress.value < 100 ? progress.value + 1 : 0;
				window.requestAnimationFrame(() => {
					setProgress();	
				})
			}
			setProgress();
			
		</script>
